<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/primary_color"
                android:onClick="toOnlineUser"
                android:text="HOME"
                android:textColor="@color/light_color"
                app:cornerRadius="100px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/primary_color"
                android:onClick="toLogout"
                android:text="Logout"
                android:textColor="@color/light_color"
                app:cornerRadius="100px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </RelativeLayout>

        <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="#FF0000"
            android:visibility="gone" />

        <TextView
            android:id="@+id/reservation_view_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="View item reservation"
            android:textAlignment="center"
            android:textColor="@color/light_color"
            android:textSize="25sp" />

        <Spinner
            android:id="@+id/reservationSpinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/light_color" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/primary_color"
            android:onClick="searchReservationId"
            android:text="@string/reservation_viewReservation_text"
            android:textColor="@color/light_color"
            app:cornerRadius="100px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="34dp"
            android:paddingRight="34dp">

            <TextView
                android:id="@+id/reservation_reservationId_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/light_color"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/reservation_reservationItemTitle_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reservation_reservationId_Text"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/light_color"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/reservation_reservationItemId_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reservation_reservationItemTitle_Text"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/light_color"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/reservation_reservationItemReleaseDate_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reservation_reservationItemId_Text"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/light_color"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/reservation_reservationReturnDateandTime_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reservation_reservationItemReleaseDate_Text"
                android:layout_marginBottom="20dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/light_color"
                android:textSize="15sp"
                android:visibility="gone" />
        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/primary_color"
            android:gravity="center"
            android:onClick="refreshReservationList"
            android:text="@string/reservation_refresh_button_text"
            android:textColor="@color/light_color"
            app:cornerRadius="100px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
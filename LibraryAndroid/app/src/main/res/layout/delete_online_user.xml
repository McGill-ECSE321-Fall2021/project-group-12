<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/deleteAccount_text"
        android:layout_width="370dp"
        android:layout_height="57dp"
        android:layout_gravity="center"
        android:layout_marginStart="153dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="153dp"
        android:gravity="center"
        android:text="@string/deleteAccount_dialog_text"
        android:textAlignment="center"
        android:textColor="@color/light_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteAccount_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="153dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="560dp"
        android:backgroundTint="@color/primary_color"
        android:gravity="center"
        android:onClick="deleteUserConfirm"
        android:text="@string/deleteAccount_dialog_yes"
        android:textColor="@color/light_color"
        app:cornerRadius="100px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/deleteAccount_no"
        app:layout_constraintHorizontal_bias="0.211"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/deleteAccount_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="560dp"
        android:backgroundTint="@color/primary_color"
        android:gravity="center"
        android:onClick="deleteUserReject"
        android:text="@string/deleteAccount_dialog_no"
        android:textColor="@color/light_color"
        app:cornerRadius="100px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
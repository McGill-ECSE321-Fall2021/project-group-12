<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <TextView
        android:id="@+id/cancelReservation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="153dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="153dp"
        android:gravity="center"
        android:text="Welcome"
        android:textAlignment="center"
        android:textColor="@color/light_color"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="153dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="153dp"
        android:backgroundTint="@color/primary_color"
        android:gravity="center"
        android:onClick="toManageAccount"
        android:text="@string/onlineUser_manageAccount_text"
        android:textColor="@color/light_color"
        app:cornerRadius="100px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancelReservation_text" />


    <Button
        android:layout_width="180dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:layout_marginStart="153dp"
        android:layout_marginEnd="153dp"
        android:backgroundTint="@color/primary_color"
        android:gravity="center"
        android:onClick="toAlbum"
        android:text="Browse Albums"
        android:textColor="@color/light_color"
        app:cornerRadius="100px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="206dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:layout_marginStart="153dp"
        android:layout_marginEnd="153dp"
        android:backgroundTint="@color/primary_color"
        android:gravity="center"
        android:onClick="toBook"
        android:text="Browse Books"
        android:textColor="@color/light_color"
        app:cornerRadius="100px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="257dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:layout_marginStart="153dp"
        android:layout_marginEnd="153dp"
        android:backgroundTint="@color/primary_color"
        android:gravity="center"
        android:onClick="toMovie"
        android:text="Browse Movies"
        android:textColor="@color/light_color"
        app:cornerRadius="100px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="308dp" />

    <Button
        android:layout_width="207dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginStart="153dp"
        android:layout_marginEnd="153dp"
        android:backgroundTint="@color/primary_color"
        android:gravity="center"
        android:onClick="toNewspaper"
        android:text="Browse Newspapers"
        android:textColor="@color/light_color"
        app:cornerRadius="100px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="359dp" />

    <Button
        android:id="@+id/deleteAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="153dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="76dp"
        android:backgroundTint="@color/primary_color"
        android:gravity="center"
        android:onClick="deleteUser"
        android:text="@string/deleteAccount_button_text"
        android:textColor="@color/light_color"
        app:cornerRadius="100px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cancelReservation_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="153dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/primary_color"
        android:gravity="center"
        android:onClick="Logout"
        android:text="@string/onlineUser_logout_text"
        android:textColor="@color/light_color"
        app:cornerRadius="100px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>